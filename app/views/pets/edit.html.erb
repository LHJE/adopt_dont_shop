<a href="/pets">Pet Index</a>

<form action="/pets/<%= @pet.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <p>Please Put In The Pet's New Information</p>
  Name:<br/>
  <input type='text' name='pet[name]' value="<%= @pet.name %>"/><br/>
  Age:<br/>
  <textarea name='pet[age]'><%= @pet.age %></textarea><br/>
  Sex:<br/>
  <textarea name='pet[sex]'><%= @pet.sex %></textarea><br/>
  Shelter ID:<br/>
  <textarea name='pet[shelter_id]'><%= @pet.shelter_id %></textarea><br/>
  Image:<br/>
  <textarea name='pet[image]'><%= @pet.image %></textarea><br/>
  <input type='submit'/>
</form>
