<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>|Name|</th>
      <th>|Approximate Age|</th>
      <th>|Sex|</th>
      <th>|Adoptable|</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.age %></td>
        <td><%= pet.sex %></td>
        <td><%= pet.adoptable %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Delete', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

