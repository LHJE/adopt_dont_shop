<h1>Shelters</h1>

<table>
  <thead>
    <tr>
      <th>_Shelter ID_</th>
      <th>_Name_</th>
      <th>_Address_</th>
      <th>_City_</th>
      <th>_State_</th>
      <th>_Zip_</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shelters.each do |shelter| %>
      <tr>
        <td><%= shelter.id %></td>
        <td><%= shelter.name %></td>
        <td><%= shelter.address %></td>
        <td><%= shelter.city %></td>
        <td><%= shelter.state %></td>
        <td><%= shelter.zip %></td>
        <td><%= link_to '|  Show  |', shelter %></td>
        <td><%= link_to '|  Edit  |', edit_shelter_path(shelter) %></td>
        <td><%= link_to '|  Delete  |', shelter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

